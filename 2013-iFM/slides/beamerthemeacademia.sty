\mode<presentation>

\useinnertheme[shadow=true]{rounded}
\useoutertheme{shadowacademia}
\usecolortheme{orchid}
\usecolortheme{whale}

\setbeamerfont{block title}{size={}}

\mode
<all>

\def\logo@university{}
\newcommand{\universitylogo}[2][height=0.5cm]{
  \pgfdeclareimage[#1]{university}{#2}
  \renewcommand{\logo@university}{university}
}    

\def\logo@department{}
\newcommand{\departmentlogo}[2][height=0.5cm]{
  \pgfdeclareimage[#1]{department}{#2}
  \renewcommand{\logo@department}{department}
}    

\logo{
  \vbox to \textheight{
    \vfil\hbox to 1.15\textwidth{
      \ifx\logo@university\@empty
      \else
      \pgfuseimage{\logo@university}
      \fi
      \hfil
      \ifx\logo@department\@empty
      \else
      \pgfuseimage{\logo@department}
      \fi
    }
  }
}
